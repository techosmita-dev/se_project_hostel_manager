{
  "name": "hostel-management",
  "version": "1.0.0",
  "description": "Login Portal",
  "main": "server.js",
  "scripts": {
    "test": "jest __tests__ --forceExit",
    "test:watch": "jest --watchAll --forceExit",
    "client-install": "npm install --prefix client",
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "set NODE_OPTIONS=--openssl-legacy-provider && npm start --prefix client",
    "dev": "cross-env NODE_OPTIONS=--openssl-legacy-provider concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/starkblaze01/Hostel-Management.git"
  },
  "author": "Mayank Pathela",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/starkblaze01/Hostel-Management/issues"
  },
  "homepage": "https://github.com/starkblaze01/Hostel-Management#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.18.3",
    "concurrently": "^5.3.0",
    "express": "^4.16.4",
    "gravatar": "^1.8.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.7.5",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "react-icons": "^5.5.0",
    "validator": "^12.1.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^26.6.1",
    "nodemon": "^1.18.10",
    "supertest": "^6.0.0"
  }
}
